<html>
  <head>
    <title>Merchants</title>
  </head>
  <body>
    <h1>Merchants</h1>

    <form action="/merchants/new" method="GET">
      <input type="submit" value="Create New Merchant"/>
    </form>

    <table>
      <tr>
        <th>id</th>
        <th>name</th>
        <th>created</th>
        <th>updated</th>
        <th>action</th>
      </tr>

      <% merchants.each do |merchant| %>

      <tr>
        <td> <%= merchant.id %> </td>
        <td> <a href="/merchants/<%= merchant.id %>/view"><%= merchant.name %></a></td>
        <td> <%= merchant.created_at %></td>
        <td> <%= merchant.updated_at %></td>
        <td>
          <form action="/merchants/<%= merchant.id %>/edit" method="GET">
            <input type="submit" value="Edit"/>
          </form>

          <form action="/merchants/<%= merchant.id %>/delete" method="POST">
            <input type="hidden" name="_method" value="DELETE"/>
            <input type="submit" value="Delete"/>
          </form>
        </td>
      </tr>

        <% end %>

    </table>
  </body>
</html>
