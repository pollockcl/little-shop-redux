<html>
  <head></head>
  <body>
    <h1>Invoices</h1>

    <table>
      <tr>
        <th>id</th>
        <th>customer_id</th>
        <th>merchant_id</th>
        <th>status</th>
        <th>created</th>
        <th>updated</th>
      </tr>

      <% invoices.each do |invoice| %>

        <tr>
          <td> <a href="/invoices/<%= invoice.id %>/view"><%= invoice.id %></a></td>
          <td> <%= invoice.customer_id %></td>
          <td> <%= invoice.merchant_id %></td>
          <td> <%= invoice.status %></td>
          <td> <%= invoice.created_at %></td>
          <td> <%= invoice.updated_at %></td>
          <td>
            <form action="/invoices/<%= invoice.id %>/edit" method="GET">
              <input type="submit" value="Edit"/>
            </form>

            <form action="/invoices/<%= invoice.id %>/delete" method="POST">
              <input type="hidden" name="_method" value="DELETE"/>
              <input type="submit" value="Delete"/>
            </form>
          </td>
        </tr>

      <% end %>

    </table>
  </body>
</html>
