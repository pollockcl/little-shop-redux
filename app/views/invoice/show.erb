<html>
  <head></head>
  <body>

    <h1>Invoice: <%= invoice.id %> - <%= invoice.status %></h1>

    <table class="dummy_table">
      <td class="dummy_table">
        <form action="/invoices/<%= invoice.id %>/edit">
          <input class="edit_button" type="submit" value="Edit"/>
        </form>
      </td>

      <td class="dummy_table">
        <form action="/invoices/<%= invoice.id %>/delete" method="POST">
          <input type="hidden" name="_method" value="DELETE"/>
          <input class="delete_button" type="submit" value="Delete"/>
        </form>
      </td>
    </table>

    <a href="/merchants/<%= invoice.merchant.id %>/view"><h3><%= invoice.merchant.name %>'s Shop</h3></a>
    <table>
      <tr>
        <th>Item ID</th>
        <th>item Title</th>
        <th>Quantity</th>
        <th>Unit Price</th>
      </tr>

      <% invoice.invoice_items.each do |invoice_item| %>

      <tr>
        <td> <%= invoice_item.item_id %> </td>
        <td> <%= invoice_item.item.title %> </td>
        <td> <%= invoice_item.quantity %> </td>
        <td> <%= invoice_item.unit_price %> </td>
      </tr>
    <% end %>
    </table>
  </body>

</html>
