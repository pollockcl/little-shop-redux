    <h1>invoice</h1>

    <table>
      <tr>
        <th>id</th>
        <th>customer_id</th>
        <th>merchant_id</th>
        <th>status</th>
        <th>created</th>
        <th>updated</th>
      </tr>

      <tr>
        <td> <%= invoice.id %> </td>
        <td> <%= invoice.customer_id %></td>
        <td> <%= invoice.merchant_id %></td>
        <td> <%= invoice.status %></td>
        <td> <%= invoice.created_at %> </td>
        <td> <%= invoice.updated_at %> </td>
      </tr>
    </table>

    <% traits[:receipts].each do |receipt| %>

    <ul>

      <li> Price: <%= receipt[:price] %> </li>
      <li> x<%= receipt[:quantity]%> </li>

    </ul>

    <% end %>

    <p>Total: <%= traits[:total] %></p>

